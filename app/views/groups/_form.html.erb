

<div class="group">
  <div class="card">
    <div class="card-body">

      <%= form_for(@group) do |f| %>
        <div class="form-group">
          <%= f.label :name %> 
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
        </div>
        
        <div class="form-group">
		       <%= f.label :icon %>
		  			<%= f.file_field :icon %>
        </div>


        <div class="form-group">
          <%= f.submit "Save Group", class: "btn btn-primary" %>
        </div>

      <% end %>
      <div class="auth-links">
					<%= link_to 'Back', groups_path %>        
      </div>
    </div>
  </div>
</div>	
